{% extends "layout.html.twig" %}

{% block body %}
  <h2>Liste des films</h2>
    {% for film in films %}
      <div class="inside_liste_film">
        <h2>{{film.titre}} - <i>Sortie le {{film.dateSortie|date('d/m/y')}} - Réalisé par {{film.idMESprenom}} {{film.prenom}}</i></h2>
          <p>
            <b>&nbsp;&nbsp;Acteurs</b> :
              {% for acteur in acteurs %}
                {{acteur.idActeur.prenom}} {{acteur.idActeur.idFilm}},
                {% if film.id == acteur.idActeur.idFilm %}
                  {{acteur.idActeur.prenom}} {{acteur.idActeur.nom}},
                {% endif %}
              {% endfor %}...
           <br/><b>&nbsp;&nbsp;Film</b> : {{film.origine}}
           <br/><b>&nbsp;&nbsp;Genre</b> : {{film.genre}}
           <br/><b>&nbsp;&nbsp;Resumé</b> : {{film.resume}}
           <br/>&nbsp;&nbsp;<a href="commentaire.php?idFilm={{film.id}}">Commentaire</a>
         </p>
      </div>
    {% endfor %}
{% endblock %}